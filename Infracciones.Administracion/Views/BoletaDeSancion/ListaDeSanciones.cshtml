@model IEnumerable<Infracciones.Dto.BoletaDeSancion>

@{
    ViewBag.Title = "Lista de sanciones";
}

<div class="container-fluid">

    <h2>Lista de sanciones</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDeLicencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreDelConductor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReglamentoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstatusDeBoletaDeSancion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDeLicencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDelConductor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReglamentoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstatusDeBoletaDeSancion)
                </td>
                <td>
                    @Html.ActionLink("Ver detalles", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>